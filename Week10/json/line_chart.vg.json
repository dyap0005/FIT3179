{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": {	"text": "Pollution Index By Year",
            "color": "black",
            "fontSize": 22 ,
            "align": "center",
            "anchor": "middle",
            "dy": -1,
            "baseline": "middle"

  },
  "data": {"url": "https://raw.githubusercontent.com/dyap0005/FIT3179/main/Week9/dataset/PM25-air-pollution.csv"},
  
  "params": [
		{ "name": "Pollution Index", "value": 100 ,
			"bind": {"input": "range", "min": 0, "max": 100, "step": 1 }
		}
	],
  "transform": [
    { "filter": "datum.PollutionIndex <= Pollution Index" },
    {"filter": {
      "field": "Country",
      "oneOf": ["United States", "Canada", "France", "Germany", "United Kingdom", "China", "Australia"
    ,"Egypt", "Russia", "Ghana"]

    }}
  ],
  "layer": [{
    "mark": {
      "type": "line",
      "point": true
  
    },
    "encoding": {
      "x": {"timeUnit": "year", "field": "Year"},
      "y": {"field": "PollutionIndex", "type": "quantitative"},
      "color": {
        "field": "Country", 
        "type": "nominal",      
        "scale":{
          "domain":[
            "United States", "Canada", "France", "Germany", "United Kingdom", "China", "Australia"
    ,"Egypt", "Russia", "Ghana"
          ]
        }
      },
      "tooltip": [
        {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
        },
        {
            "field": "PollutionIndex",
            "type": "quantitative"
        }
      ]
    }
    
  },
  {
    "mark": {
      "type": "text",
      "align": "left",
      "baseline": "middle",
      "dx": 100,
      "dy": -185,
      "fontSize": 11.5,
      "fontStyle": "italic"
    },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['PollutionIndex'] > 80",
            "value": 1
          },
        "value": 0
      },
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "PollutionIndex", "type": "quantitative", "format": ","}
      ]
    }
  }]

    
}