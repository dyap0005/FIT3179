{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "PM2.5 Index by Country (2017)",
    "width": 600,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/dyap0005/FIT3179/main/Week%209%20Homework/json/countries.topojson",
        "format": {
            "type": "topojson",
            "feature": "countries"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/dyap0005/FIT3179/main/Week%209%20Homework/dataset/PM25-air-pollution.csv"
                },
                "key": "Country",
                "fields": [
                    "PollutionIndex"
                ]
            }
        },
        {
            "calculate": "datum.PollutionIndex",
            "as": "PollutionIndex"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "PollutionIndex",
            "type": "quantitative"

        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "PollutionIndex",
                "type": "quantitative"
            }
        ]
    }
}